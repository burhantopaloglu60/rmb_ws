<launch>
  <!-- Micro-ROS Agent -->
  <node
    pkg="micro_ros_agent"
    exec="micro_ros_agent"
    args="serial --dev /dev/ttyUSB0 -b 115200"
    output="screen">
  </node>
  <node pkg="g425_assign3_pkg" exec="LifecycleNodeSubscriber" >
    <param from="$(find-pkg-share g425_assign3_pkg)/config/assign3_params.yaml" />
    <param name="connection_type" value="false"/>
  </node>
  <node pkg="g425_assign3_pkg" exec="ImuLifecycleNode" >
    <param from="$(find-pkg-share g425_assign3_pkg)/config/assign3_params.yaml" />
    <param name="connection_type" value="false"/>
  </node>
  <node pkg="g425_assign3_pkg" exec="LifecycleManager" >
    <param from="$(find-pkg-share g425_assign3_pkg)/config/assign3_params.yaml" />
    <param name="connection_type" value="false"/>
  </node>
</launch>
